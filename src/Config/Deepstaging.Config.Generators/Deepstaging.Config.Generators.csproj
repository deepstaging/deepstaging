<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <IsRoslynComponent>true</IsRoslynComponent>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <!-- Suppress RS1038 - Workspaces reference comes from Deepstaging.Roslyn but we don't use it -->
        <NoWarn>$(NoWarn);RS1038</NoWarn>

        <!-- Package metadata -->
        <PackageId>Deepstaging.Config.Generators</PackageId>
        <Title>Deepstaging.Config.Generators</Title>
        <Description>Source generators for Deepstaging.Config. Generates immutable With*() methods for classes marked with [GenerateWith].</Description>
        <PackageTags>deepstaging;roslynkit;source-generator;roslyn</PackageTags>

        <!-- Copy local dependencies so they can be bundled with the analyzer -->
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp"/>
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Scriban" PrivateAssets="all" GeneratePathProperty="true"/>
        <PackageReference Include="Deepstaging.Roslyn"/>
        <PackageReference Include="Deepstaging.Roslyn.Scriban"/>
    </ItemGroup>

    <!-- Reference attribute and projection projects -->
    <ItemGroup>
        <ProjectReference Include="..\Deepstaging.Config\Deepstaging.Config.csproj"/>
        <ProjectReference Include="..\Deepstaging.Config.Projection\Deepstaging.Config.Projection.csproj"/>
    </ItemGroup>

    <!-- Embed templates as resources -->
    <ItemGroup>
        <EmbeddedResource Include="Templates/**/*.scriban-cs"/>
    </ItemGroup>

    <!-- 
        Bundle dependencies for analyzer consumption.
        When this project is referenced as an analyzer, these files will be loaded alongside it.
    -->
    <PropertyGroup>
        <GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPaths</GetTargetPathDependsOn>
    </PropertyGroup>

    <Target Name="GetDependencyTargetPaths" AfterTargets="ResolvePackageAssets">
        <ItemGroup>
            <!-- Bundle Scriban for template rendering -->
            <TargetPathWithTargetPlatformMoniker Include="$(PkgScriban)/lib/netstandard2.0/Scriban.dll"
                                                 IncludeRuntimeDependency="false"/>
            <!-- Bundle Deepstaging.Roslyn -->
            <!-- Bundle Deepstaging.Roslyn.Scriban -->
            <!-- Bundle Deepstaging.Config (attributes) -->
            <!-- Bundle Deepstaging.Config.Projection -->
        </ItemGroup>
    </Target>

</Project>
